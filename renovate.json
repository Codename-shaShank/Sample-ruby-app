{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],

  "enabledManagers": ["bundler"],
  "bundler": {
    "enabled": true
  },

  "packageRules": [
    {
      "matchManagers": ["bundler"],
      "matchDepNames": ["rails", "karafka", "ddtrace", "ruby"],
      "enabled": false
    }
  ],

  "rangeStrategy": "bump",
  "prHourlyLimit": 3,
  "prConcurrentLimit": 3,

  "labels": ["renovate", "dependencies"]
}
